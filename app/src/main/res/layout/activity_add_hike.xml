<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.guest.hikeioclone.AddHikeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addHike"
        android:id="@+id/txtViewAddHike"
        android:layout_marginTop="77dp"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:layout_below="@+id/txtViewAddHike"
        android:layout_toRightOf="@+id/txtViewAddHike"
        android:layout_toEndOf="@+id/txtViewAddHike"
        android:layout_marginTop="38dp"
        android:hint="Eagle Creek"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLocation"
        android:hint="Columbia River, OR"
        android:layout_below="@+id/txtName"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtDistance"
        android:layout_below="@+id/txtLocation"
        android:layout_alignLeft="@+id/txtLocation"
        android:layout_alignStart="@+id/txtLocation"
        android:hint="15.5"
        android:layout_alignRight="@+id/txtName"
        android:layout_alignEnd="@+id/txtName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtElevGain"
        android:hint="163"
        android:layout_below="@+id/txtDistance"
        android:layout_toRightOf="@+id/txtViewAddHike"
        android:layout_alignRight="@+id/txtDistance"
        android:layout_alignEnd="@+id/txtDistance"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtElevMax"
        android:hint="5900"
        android:layout_below="@+id/txtElevGain"
        android:layout_alignRight="@+id/txtElevGain"
        android:layout_alignEnd="@+id/txtElevGain"
        android:layout_alignLeft="@+id/txtElevGain"
        android:layout_alignStart="@+id/txtElevGain"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/txtLat"
        android:hint="37.30669"
        android:layout_below="@+id/txtElevMax"
        android:layout_alignLeft="@+id/txtElevMax"
        android:layout_alignStart="@+id/txtElevMax"
        android:layout_alignRight="@+id/txtElevMax"
        android:layout_alignEnd="@+id/txtElevMax"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/txtLong"
        android:hint="-112.94745"
        android:layout_alignBottom="@+id/txtLat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtElevMax"
        android:layout_toEndOf="@+id/txtElevMax"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/txtViewName"
        android:textSize="20sp"
        android:layout_alignTop="@+id/txtName"
        android:layout_toLeftOf="@+id/txtName"
        android:layout_toStartOf="@+id/txtName"
        android:paddingTop="8dp"
        android:paddingRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewLocation"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:text="Location"
        android:layout_below="@+id/txtName"
        android:layout_alignRight="@+id/txtViewName"
        android:layout_alignEnd="@+id/txtViewName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewDistance"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:text="Distance"
        android:layout_below="@+id/txtLocation"
        android:layout_toLeftOf="@+id/txtLocation"
        android:layout_toStartOf="@+id/txtLocation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewElevGain"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:text="Elevation Gain"
        android:layout_below="@+id/txtDistance"
        android:layout_alignRight="@+id/txtViewDistance"
        android:layout_alignEnd="@+id/txtViewDistance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewElevMax"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:text="Elevation Max"
        android:textIsSelectable="false"
        android:layout_below="@+id/txtElevGain"
        android:layout_toLeftOf="@+id/txtElevGain"
        android:layout_toStartOf="@+id/txtElevGain"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewLatLong"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:text="Lat. / Lng."
        android:layout_below="@+id/txtElevMax"
        android:layout_alignRight="@+id/txtViewElevGain"
        android:layout_alignEnd="@+id/txtViewElevGain"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Hike"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/btnAddHike"
        android:layout_below="@+id/txtLong"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:background="@color/colorAccent"/>

</RelativeLayout>
